Domain RayCharge {
    Subdomain Authentication
    Subdomain Supplier
    Subdomain Drive
    Subdomain Recharge
    Subdomain Notificaton
    Subdomain Report // Verificar se vai ser necessario
}

ContextMap {
    contains Authentication
}

BoundedContext Authentication {
    Aggregate User {
        Entity User {
            aggregateRoot

            -UserId id
            String login
            String password
            -UserRole role

            Repository UserRepository {
                @User save(@User user);
            }
        }
        ValueObject UserId {
            String id 
        }
        enum UserRole {
            DRIVER,
            SUPPLIER
        }
        Service AuthenticationService {
            @User createUser(@User user);
        }
    }
}